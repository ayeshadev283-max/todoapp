# Production Environment Variables
# Copy this file to .env and fill in the actual values

# Database Configuration
# Get this from Neon PostgreSQL dashboard: https://console.neon.tech
# Format: postgresql://[user]:[password]@[endpoint]/[database]?sslmode=require
DATABASE_URL=postgresql://neondb_owner:your_password@ep-example-12345.us-east-2.aws.neon.tech/neondb?sslmode=require

# Authentication Secret
# Generate a strong random secret (min 32 characters)
# Use: python -c "import secrets; print(secrets.token_urlsafe(32))"
BETTER_AUTH_SECRET=your-super-secure-secret-key-here-min-32-chars

# CORS Configuration
# Add your production frontend URL (Vercel deployment)
# Format: https://your-app-name.vercel.app
CORS_ORIGINS=https://your-app.vercel.app,http://localhost:3000

# Environment
ENVIRONMENT=production

# Optional: Logging Level
LOG_LEVEL=info

# Optional: JWT Expiration (in seconds, default 7 days)
# JWT_EXPIRATION_SECONDS=604800
